{{! <h2>Crie sua conta Hoje</h2> }}
<div class="card">
  <div class="card-body">
    <form action="/usuarios/registro" method="post" enctype="multipart/form-data">
      <label for="nome">Nome: </label>
      <input type="text" name="nome" class="form-control" required />
      <label for="email">Email: </label>
      <input type="email" name="email" class="form-control" required />
      <label for="senha">Senha: </label>
      <input type="password" name="senha" class="form-control" required />
      <label for="senha2">Repita sua senha: </label>
      <input type="password" name="senha2" class="form-control" required />

      <h3>Nome da loja: </h3>
      <input type="text" name="nomeLoja" class="form-control" required />

      <h3>Imagem principal da loja: </h3>
      <input value="123" type="file" name="imgLogo" class="form-control" />
      <h3>imagem de fundo da loja: </h3>
      <input value="123" type="file" name="imgBg" class="form-control" />

      <h3>Informações de contato: </h3>
      <label for="estado">Telefone: </label>
      <input type="text" name="telefone" class="form-control" required />

      <h3>Informações de endereço: </h3>
      <label for="estado">Estado: </label>
      <input type="text" name="estado" class="form-control" required />
      <label for="cidade">Cidade: </label>
      <input type="text" name="cidade" class="form-control" required />
      <label for="bairro">Bairro: </label>
      <input type="text" name="bairro" class="form-control" required />
      <label for="rua">Rua: </label>
      <input type="text" name="rua" class="form-control" required />
      <label for="numero">Nº: </label>
      <input type="text" name="numero" class="form-control" required />
      <label for="pontoRef">Ponto de referência: </label>
      <input type="text" name="pontoReferencia" class="form-control" required />

      <h3>Horários de funcionamento: </h3>

      <h5>Segunda-feira: </h5>
      <label for="segAb">Abre: </label>
      <input type="time" name="segAb" class="form-control" />
      <label for="segFe">Fecha: </label>
      <input type="time" name="segFe" class="form-control" />

      <h5>Terça-feira: </h5>
      <label for="terAb">Abre: </label>
      <input type="time" name="terAb" class="form-control" />
      <label for="terFe">Fecha: </label>
      <input type="time" name="terFe" class="form-control" />

      <h5>Quarta-feira: </h5>
      <label for="quaAb">Abre: </label>
      <input type="time" name="quaAb" class="form-control" />
      <label for="quaFe">Fecha: </label>
      <input type="time" name="quaFe" class="form-control" />

      <h5>Quinta-feira: </h5>
      <label for="quiAb">Abre: </label>
      <input type="time" name="quiAb" class="form-control" />
      <label for="quiFe">Fecha: </label>
      <input type="time" name="quiFe" class="form-control" />

      <h5>Sexta-feira: </h5>
      <label for="sexAb">Abre: </label>
      <input type="time" name="sexAb" class="form-control" />
      <label for="sexFe">Fecha: </label>
      <input type="time" name="sexFe" class="form-control" />

      <h5>Sbábado-feira: </h5>
      <label for="sabAb">Abre: </label>
      <input type="time" name="sabAb" class="form-control" />
      <label for="sabFe">Fecha: </label>
      <input type="time" name="sabFe" class="form-control" />

      <h5>Domingo: </h5>
      <label for="domAb">Abre: </label>
      <input type="time" name="domAb" class="form-control" />
      <label for="domFe">Fecha: </label>
      <input type="time" name="domFe" class="form-control" />

      <button type="submit" class="btn btn-success mt-4">Criar conta</button>
    </form>
  </div>
</div>