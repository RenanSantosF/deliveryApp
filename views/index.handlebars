{{#each dadosUsuario}}
  <header data-img="./uploads/{{imgBg}}" id="headerImgFundo">
    <div>
      <img src="./uploads/{{imgLogo}}" />
      <h1>{{nomeLoja}}</h1>
      <span>{{rua}} {{numeroRua}}, {{bairro}}, {{cidade}} - {{estado}}</span>
      {{#each statusSituacao}}
        <div
          class="horarioFuncionamento"
          data-status="{{status}}"
          id="date-span"
        >
          <span>{{status}} - {{abertura}} às {{fechamento}}</span>
        </div>
      {{/each}}
    </div>
  </header>
{{/each}}

{{!-- <h2 class="spanConhecaMenu">Conheça nosso menu</h2> --}}

<div id="menu">

  <div id="menu">
    {{#each produtosPorCategoria}}
      <div class="containerSpanBebidas">
        <h2>{{@key}}</h2>
      </div>
      <div class="categorias" id="menu">
        {{#each this}}
          <div class="containerProduto">
            <img src="./uploads/{{imgProduto}}" />
            <div class="containerDescricaoPreco">
              <p class="spanTitleProduto">{{titulo}}</p>
              <p class="spanDescricaoProduto">{{descricao}}</p>
              <div class="preco">
                <p>R$ {{preco}}</p>
                <button
                  data-price="{{preco}}"
                  data-name="{{titulo}}"
                  class="add-to-cart-btn"
                  href="#"
                ><img src="./img/buy.png" /></button>
              </div>
            </div>
          </div>
        {{else}}
          <h2>Nenhum produto encontrado</h2>
        {{/each}}
      </div>

    {{else}}
      <h2>Nenhum produto encontrado</h2>
    {{/each}}
  </div>

</div>

{{#each dadosUsuario}}
  <div class="modal" id="cart-modal" data-contact="{{telefone}}">
    <div>
      <div class="headerModal">
        <h2>Meu carrinho</h2>
      </div>

      <div id="cart-items" class="items"></div>

      <p>Total: <span id="cart-total">0.00</span></p>

      <div class="containerEntregaBtn">
        <img id="imgEntrega" src="./img/imgEntrega.png" alt="" />
        <button id="btnEntrega">Adicionar informações de entrega</button>
      </div>

      <span id="address-warn"></span>
      <div class="containerEntrega" id="containerEntrega">
        <span class="item1">Informações de entrega:</span>
        <input type="text" class="item2" id="address" placeholder="CEP" />
        <input type="text" class="item3" id="rua" placeholder="Rua/Avenida" />
        <input type="text" class="item4" id="numero" placeholder="Nº" />
        <input
          class="item5"
          type="text"
          id="pontoReferencia"
          placeholder="Ponto de referência"
        />
        <input type="text" class="item6" id="Bairro" placeholder="Bairro" />
        <input type="text" class="item7" id="Cidade" placeholder="Cidade" />
        <input type="text" class="item8" id="UF" placeholder="UF" />
        <span class="item9">Telefone para contato:</span>
        <input
          class="item10"
          type="text"
          id="contatoInput"
          placeholder="DDD + número"
        />
      </div>

      <div class="containerFinalizarPedido">
        <button id="close-modal-btn">Fechar</button>
        <button id="checkout-btn">Finalizar pedido</button>
      </div>

    </div>
  </div>
{{/each}}

<footer>
  <button id="cart-btn">
    (<span id="cart-count">0</span>) Ver meu carrinho
    <img src="./img/buy.png" />
  </button>
</footer>