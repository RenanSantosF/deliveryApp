{{#each erros}}
  <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}

<div class="body">
  <form action="/{{loja}}/admin/bairros/edit" method="post">
    <div class="card">
      <h2 class="title">Cadastrar bairro</h2>
      <input type="hidden" name="id" value="{{bairro._id}}" />
      <label class="label" for="nome">Bairro<span class="required">*</span> </label>
      <input class="input" type="text" id="nome" name="nome" value="{{bairro.nome}}" />
      <label class="label" for="nome">Taxa de entrega<span class="required">*</span> </label>
      <input class="input" type="text" id="valor" name="taxa" value="{{bairro.taxa}}" />
      <br />

      <button id="btnEnviar" type="submit">Editar bairro</button>
    </div>
  </form>
</div>