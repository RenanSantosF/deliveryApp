<div class="body">
  <form action="/{{loja}}/admin/pagamentos/edit" method="post">
    <div class="card">
      <h2 class="title">Cadastrar forma de pagamento</h2>
      <input type="hidden" name="id" value="{{pagamento._id}}" />
      <label class="label" for="nome">Forma de pagamento<span class="required">*</span> </label>
      <input class="input" type="text" id="nome" name="nome" value="{{pagamento.nome}}" />
      <button id="btnEnviar" type="submit">Editar</button>
    </div>
  </form>
</div>