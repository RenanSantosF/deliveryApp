{{>_navbar}}

{{#each erros}}
  <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}

<div class="card">
  <div class="card-body">
    <form action="/{{loja}}/admin/produtos/nova" method="post" enctype="multipart/form-data">
      <label for="titulo">Título: </label>
        <input type="text" class="form-control" name="titulo">
      <label for="slug">Slug: </label>
        <input type="text" name="slug" class="form-control">
      <label for="descricao">Descrição: </label>
        <input type="text" name="descricao" class="form-control">
      <label for="preco">Preço: </label>
        <input type="text" name="preco" class="form-control">
      <label for="preco">Imagem: </label>
        <input type="file" name="imgProduto" class="form-control">
        <label for="categoria">Categoria: </label>
        <select class="form-select" name="categoria">
          {{#each categorias}}
          <option value="{{_id}}">{{nome}}</option>
          {{else}}
          <option value="0">Nenhuma categoria registrada</option>
          {{/each}}
        </select>
        <button class="btn btn-success mt-3" type="submit">Criar produto</button>
    </form>
  </div>
</div>