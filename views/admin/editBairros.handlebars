{{>_navbar}}
{{#each erros}}
  <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}

<div class="card">
  <div class="card-body">
    <form action="/{{loja}}/admin/bairros/edit" method="post">
    <input type="hidden" name="id" value="{{bairro._id}}">
      <label for="nome">Nome: </label>
        <input class="form-control" type="text" id="nome" name="nome" value="{{bairro.nome}}">
      <br>
      <label for="taxa">Taxa de entrega: </label>
        <input class="form-control" type="text" id="slug" name="taxa" value="{{bairro.taxa}}">
      <br>
      <button type="submit" class="btn btn-success">Editar bairro</button>
    </form>
  </div>
</div>