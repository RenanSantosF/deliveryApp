{{!-- {{>_navbar}} --}}

{{#each erros}}
  <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}

<div class="body">
  <form action="/{{loja}}/admin/adicionais/nova" method="post">
    <div class="card">
      <h2 class="title">Cadastrar adicional</h2>
      <label class="label" for="nome">Nome<span class="required">*</span> </label>
      <input class="input" type="text" id="nome" name="nome" />
      <br />
      <label class="label" for="taxa">Valor do Adicional<span class="required">*</span> </label>
      <input class="input" type="text" id="valor" name="taxa" />
      <br />

      <label class="label" for="categoria">Catetegoria<span class="required">*</span></label>
      <select id="select" class="select" name="categoria">
        <option value="">Selecione a categoria</option>
        {{#each categorias}}
          <option value="{{nome}}">{{nome}}</option>
        {{else}}
          <option value="">Cadastre uma categoria</option>
        {{/each}}
      </select>

      <button type="submit" id="btnEnviar">Incluir Adicional</button>
    </div>
  </form>

</div>

