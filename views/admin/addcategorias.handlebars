<div class="body">
  <form action="/{{loja}}/admin/categorias/nova" method="post">
    <div class="card">
      <h2 class="title">Cadastrar categoria</h2>
      <label class="label"  for="nome">Nome<span class="required">*</span> </label>
      <input class="input" type="text" id="nome" name="nome" placeholder="nome da categoria" />
